@model IEnumerable<HotelPrenotazioni.Models.UserWithRoles>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Ruoli</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userWithRoles in Model)
            {
                <tr>
                    <td>@userWithRoles.User.Email</td>
                    <td>@string.Join(", ", userWithRoles.Roles)</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@userWithRoles.User.Id" method="post">
                            <button type="submit" class="btn btn-danger">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a class="create-client-link" asp-action="Create">Aggiungi Dipendente</a>
