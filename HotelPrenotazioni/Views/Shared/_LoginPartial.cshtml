@using Microsoft.AspNetCore.Identity
@using HotelPrenotazioni.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var utente = await UserManager.GetUserAsync(User);
        var ruoli = await UserManager.GetRolesAsync(utente);

        <li class="nav-item">
            <span class="nav-link text-success fw-bold">Ciao, @utente.NomeCompleto!</span>
        </li>

       

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">Profilo</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        
    }
</ul>
